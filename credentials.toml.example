# Gira Configuration File Example
# Copy this file to ~/.config/gira/credentials.toml and fill in your actual credentials
# The config directory and file should have secure permissions:
#   Directory: chmod 700 ~/.config/gira
#   File: chmod 600 ~/.config/gira/credentials.toml

[general]
# Enable debug mode (uses mock API client)
debug = true

[credentials]
# Your Jira account email
email = "someone@something.com"

# Your Jira API token or password
secret = "secret-goes-here"

# Your Jira domain (without https://)
domain = "your-domain.atlassian.net"
